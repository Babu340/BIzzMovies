<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Activities.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    <RelativeLayout
        android:layout_width="280dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:id="@+id/mv_mydaat"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:text="Whilpsh"
            android:id="@+id/mv_name"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="wrap_content"
            android:text="Whilpsh"
            android:id="@+id/mv_date"
            android:layout_below="@+id/mv_name"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/mv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mv_date"
            android:layout_marginTop="-2dp"
            android:text="sfffffffffffdffffffffvshsdhfshdjhsdfsdfvfsdff"
            android:textSize="15dp" />
    </RelativeLayout>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="end"
            app:constraint_referenced_ids="mv_mydaat" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="18dp"
    android:layout_marginRight="5dp"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_stars_black_24dp"
        android:layout_toLeftOf="@+id/mv_rating"
        android:id="@+id/ratig_img"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mv_rating"

        android:text="4.5"
        android:layout_alignParentRight="true"
        android:textSize="15dp" />
</RelativeLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>